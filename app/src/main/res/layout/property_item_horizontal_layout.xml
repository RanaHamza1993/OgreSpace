<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/bidCardSize"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bidcardmargintop"
        android:layout_marginRight="@dimen/homefragmentmargin"
        android:layout_marginBottom="@dimen/bidcardmarginbot"
        android:background="@color/white"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:elevation="@dimen/app_elevation"
        app:cardElevation="@dimen/app_elevation"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="@dimen/app_elevation"
        app:ignore="NamespaceTypo"
        card_view:cardPreventCornerOverlap="false">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <ImageView
                android:id="@+id/timage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bidCardImageHeight"
                android:background="#ffffff"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_padding_how_it"
                android:layout_marginRight="@dimen/text_padding_how_it"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/bidname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:fontFamily="@font/opensans_bold"
                    android:text="machine learning"
                    android:textColor="@color/black"
                    android:textSize="@dimen/cramnormaltext"
                    android:textStyle="bold" />

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                <TextView
                        android:id="@+id/bidAuther"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLength="12"
                        android:maxLines="1"
                        android:text="MIT-107"
                        android:fontFamily="@font/opensans_regular"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/cramnormaltext"
                        android:textStyle="normal" />



                <!--<ImageView-->
                <!--android:id="@+id/bidonheart"-->
                <!--android:layout_width="@dimen/bidheartsize"-->
                <!--android:layout_height="@dimen/bidheartsize"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:scaleType="centerCrop"-->
                <!--android:src="@drawable/emptyheart"-->
                <!--android:tag="bidonemptyheart"-->

                <!--/>-->

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                <ImageView
                        android:id="@+id/bidonheart"
                        android:layout_width="@dimen/morebidCardCartSize"
                        android:layout_height="@dimen/morebidCardCartSize"
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/crammargin4"
                        android:layout_marginLeft="@dimen/text_padding_how_it"
                        android:src="@drawable/cplaceholder"
                        android:tag="bidonemptyheart"></ImageView>


                <ImageView
                        android:id="@+id/bidCart"
                        android:layout_width="@dimen/morebidCardCartSize"
                        android:layout_height="@dimen/morebidCardCartSize"
                        android:layout_toLeftOf="@+id/bidonheart"
                        android:padding="@dimen/crammargin3"
                        android:src="@mipmap/add_cart"
                        android:tag="addcart" />



                <RatingBar
                        android:id="@+id/iv_rating"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:isIndicator="false"
                        android:numStars="5"
                        android:rating="3.5"
                        android:scaleX="1"
                        android:scaleY="1"
                        android:theme="@style/RatingBar" />


            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/text_padding_how_it"
                    android:gravity="center_vertical">


                <TextView
                        android:id="@+id/bidiscount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/crammargin1"
                        android:text="$50"
                        android:ellipsize="end"
                        android:maxLength="8"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/bidPrize"
                        android:fontFamily="@font/opensans_bold"
                        android:textColor="@color/red"
                        android:textSize="@dimen/app_mini_text"
                        android:textStyle="bold" />
                <TextView

                        android:id="@+id/bidPrize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLength="8"
                        android:maxLines="1"
                        android:text="$20"
                        android:textColor="@color/holo_green_dark"
                        android:textSize="@dimen/cramnormaltext"
                        android:fontFamily="@font/opensans_bold"
                        android:textStyle="bold" />



                <!--<ImageView-->
                <!--android:id="@+id/bidonheart"-->
                <!--android:layout_width="@dimen/bidheartsize"-->
                <!--android:layout_height="@dimen/bidheartsize"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:scaleType="centerCrop"-->
                <!--android:src="@drawable/emptyheart"-->
                <!--android:tag="bidonemptyheart"-->

                <!--/>-->

            </RelativeLayout>

            <TextView
                    android:id="@+id/bidon_accept_offer"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="@dimen/button_elevation"
                    android:layout_height="@dimen/bidCardbtnheight"
                    android:background="@drawable/bid_buy_btns_home"
                    android:padding="5dp"
                    android:layout_marginLeft="@dimen/button_elevation"
                    android:layout_marginRight="@dimen/button_elevation"
                    android:text="Accept Offer"
                    android:visibility="invisible"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:elevation="@dimen/button_elevation"
                    android:textColor="@drawable/bidbuybtntextstate"
                    android:textColorHighlight="@color/white"
                    android:textSize="@dimen/bidCardbtntext"
                    android:textStyle="bold" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:orientation="horizontal">


                <TextView
                        android:id="@+id/bidnowbuynow"
                        android:layout_width="0dp"
                        android:layout_marginBottom="6dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/button_elevation"
                        android:layout_marginRight="@dimen/button_elevation"
                        android:background="@drawable/bid_buy_btns_home"
                        android:padding="5dp"
                        android:text="Buy Now"
                        android:gravity="center"
                        android:textAllCaps="false"
                        android:elevation="@dimen/button_elevation"
                        android:textColor="@drawable/bidbuybtntextstate"
                        android:textColorHighlight="@color/white"
                        android:textSize="@dimen/bidCardbtntext"
                        android:textStyle="bold" />

                <TextView
                        android:id="@+id/bidonbidnow"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/button_elevation"
                        android:layout_marginRight="@dimen/button_elevation"
                        android:layout_weight="1"
                        android:layout_marginBottom="@dimen/crammargin3"
                        android:background="@drawable/bid_buy_btns_home"
                        android:textColor="@drawable/bidbuybtntextstate"
                        android:padding="5dp"
                        android:text="Bid Now"
                        android:elevation="@dimen/button_elevation"
                        android:gravity="center"
                        android:textAllCaps="false"
                        android:textSize="@dimen/bidCardbtntext"
                        android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>

