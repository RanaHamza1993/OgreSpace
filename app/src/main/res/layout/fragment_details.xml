<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/white"
              android:layout_height="wrap_content">
    
    <ScrollView
            android:layout_marginBottom="@dimen/app_heading_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardElevation="4dp"
                    android:layout_marginBottom="@dimen/text_padding_how_it">
                
                <com.daimajia.slider.library.SliderLayout
                        android:id="@+id/property_img"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/rangebar_width"
                        android:background="@color/white"/>
            
            </androidx.cardview.widget.CardView>
            <LinearLayout
                    android:layout_marginTop="@dimen/scmarginleft"
                    android:layout_marginBottom="@dimen/bidcardmargintop"
                    android:layout_marginLeft="@dimen/homefragmentmargin"
                    android:layout_marginRight="@dimen/homefragmentmargin"
                    android:background="@color/theme_secondary_text_inverted"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:textSize="@dimen/app_normal_text"
                        android:textColor="@color/black"
                        android:text="$ "
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:fontFamily="@font/opensans_bold"
                        android:id="@+id/property_price_txt"
                        android:textSize="@dimen/app_heading_text"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="5,000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                    android:layout_marginBottom="@dimen/bidcardmargintop"
                    android:layout_marginLeft="@dimen/homefragmentmargin"
                    android:layout_marginRight="@dimen/homefragmentmargin"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="Kdkjhvh jhkjfhjkfdkdvkjdvjk  djjfk dhbc dh dhn dhxvn dh dh  hnd vx hdn vh ndhxn  hn db cdhj dx cdjhn h ed  "
                    android:id="@+id/property_dis_txt"
                    android:textSize="@dimen/app_normal_text"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
            />
            <TextView
                    android:fontFamily="@font/opensans_semibold"
                    android:layout_marginTop="@dimen/scmarginleft"
                    android:layout_marginBottom="@dimen/bidcardmargintop"
                    android:layout_marginLeft="@dimen/homefragmentmargin"
                    android:layout_marginRight="@dimen/homefragmentmargin"
                    android:textSize="@dimen/app_small_text"
                    android:text="Phase 6"
                    android:id="@+id/property_address_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                    
                    android:layout_marginLeft="@dimen/homefragmentmargin"
                    android:layout_marginRight="@dimen/homefragmentmargin"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/grey">
                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:id="@+id/mappp"
                ></FrameLayout>
            </LinearLayout>
            <TextView
                    android:fontFamily="@font/opensans_bold"
                    android:layout_marginTop="@dimen/scmarginleft"
                    android:layout_marginBottom="@dimen/bidcardmargintop"
                    android:layout_marginLeft="@dimen/homefragmentmargin"
                    android:layout_marginRight="@dimen/homefragmentmargin"
                    android:textSize="@dimen/app_heading_text"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Features"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">
                <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginLeft="@dimen/homefragmentmargin"
                        android:layout_marginRight="@dimen/homefragmentmargin"
                        android:id="@+id/recyc_features"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                    android:fontFamily="@font/opensans_bold"
                    android:layout_marginTop="@dimen/scmarginleft"
                    android:layout_marginBottom="@dimen/bidcardmargintop"
                    android:layout_marginLeft="@dimen/homefragmentmargin"
                    android:layout_marginRight="@dimen/homefragmentmargin"
                    android:textSize="@dimen/app_heading_text"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:layout_marginLeft="@dimen/homefragmentmargin"
                        android:layout_marginRight="@dimen/homefragmentmargin"
                        android:background="@color/holo_gray_bright"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:paddingTop="@dimen/s4b_padding"
                            android:paddingBottom="@dimen/s4b_padding"
                            android:drawablePadding="@dimen/s4b_padding"
                            android:drawableLeft="@drawable/location_img_n"
                            android:fontFamily="@font/opensans_light"
                            android:layout_marginLeft="@dimen/crammargin25"
                            android:textSize="@dimen/app_small_text"
                            android:textColor="@color/black"
                            android:text="Address"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:paddingTop="@dimen/s4b_padding"
                            android:paddingBottom="@dimen/s4b_padding"
                            android:gravity="left"
                            android:layout_marginRight="@dimen/crammargin25"
                            android:fontFamily="@font/opensans_light"
                            android:id="@+id/property_location_txt"
                            android:layout_marginLeft="@dimen/loginInnerMargin"
                            android:textSize="@dimen/app_small_text"
                            android:textColor="@color/black"
                            android:text="Location"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                
                </LinearLayout>
                <LinearLayout
                        android:layout_marginLeft="@dimen/homefragmentmargin"
                        android:layout_marginRight="@dimen/homefragmentmargin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:paddingTop="@dimen/s4b_padding"
                            android:paddingBottom="@dimen/s4b_padding"
                            android:drawablePadding="@dimen/s4b_padding"
                            android:drawableLeft="@drawable/propertyid_img_n"
                            android:fontFamily="@font/opensans_light"
                            android:layout_marginLeft="@dimen/crammargin25"
                            android:textSize="@dimen/app_small_text"
                            android:textColor="@color/black"
                            android:text="Property ID"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:paddingTop="@dimen/s4b_padding"
                            android:paddingBottom="@dimen/s4b_padding"
                            android:fontFamily="@font/opensans_light"
                            android:id="@+id/property_id_txt"
                            android:gravity="left"
                            android:layout_marginRight="@dimen/crammargin25"
                            android:layout_marginLeft="@dimen/loginInnerMargin"
                            android:textSize="@dimen/app_small_text"
                            android:textColor="@color/black"
                            android:text="ID"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                
                </LinearLayout>
                <LinearLayout
                        android:background="@color/holo_gray_bright"
                        android:layout_marginLeft="@dimen/homefragmentmargin"
                        android:layout_marginRight="@dimen/homefragmentmargin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:paddingTop="@dimen/s4b_padding"
                            android:paddingBottom="@dimen/s4b_padding"
                            android:drawablePadding="@dimen/s4b_padding"
                            android:drawableLeft="@drawable/type_img_n"
                            android:fontFamily="@font/opensans_light"
                            android:layout_marginLeft="@dimen/crammargin25"
                            android:textSize="@dimen/app_small_text"
                            android:textColor="@color/black"
                            android:text="Type"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:paddingTop="@dimen/s4b_padding"
                            android:paddingBottom="@dimen/s4b_padding"
                            android:gravity="left"
                            android:layout_marginRight="@dimen/crammargin25"
                            android:fontFamily="@font/opensans_light"
                            android:id="@+id/property_type_txt"
                            android:layout_marginLeft="@dimen/loginInnerMargin"
                            android:textSize="@dimen/app_small_text"
                            android:textColor="@color/black"
                            android:text="Type"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                
                </LinearLayout>
                <LinearLayout
                        android:layout_marginLeft="@dimen/homefragmentmargin"
                        android:layout_marginRight="@dimen/homefragmentmargin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:paddingTop="@dimen/s4b_padding"
                            android:paddingBottom="@dimen/s4b_padding"
                            android:drawablePadding="@dimen/s4b_padding"
                            android:drawableLeft="@drawable/price_img_n"
                            android:fontFamily="@font/opensans_light"
                            android:layout_marginLeft="@dimen/crammargin25"
                            android:textSize="@dimen/app_small_text"
                            android:textColor="@color/black"
                            android:text="Price"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:paddingTop="@dimen/s4b_padding"
                            android:paddingBottom="@dimen/s4b_padding"
                            android:gravity="left"
                            android:layout_marginRight="@dimen/crammargin25"
                            android:fontFamily="@font/opensans_light"
                            android:id="@+id/property_pri_txt"
                            android:layout_marginLeft="@dimen/loginInnerMargin"
                            android:textSize="@dimen/app_small_text"
                            android:textColor="@color/black"
                            android:text="Price"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                
                </LinearLayout>
                <LinearLayout
                        android:background="@color/holo_gray_bright"
                        android:layout_marginLeft="@dimen/homefragmentmargin"
                        android:layout_marginRight="@dimen/homefragmentmargin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:paddingTop="@dimen/s4b_padding"
                            android:paddingBottom="@dimen/s4b_padding"
                            android:drawablePadding="@dimen/s4b_padding"
                            android:drawableLeft="@drawable/area_img_n"
                            android:fontFamily="@font/opensans_light"
                            android:layout_marginLeft="@dimen/crammargin25"
                            android:textSize="@dimen/app_small_text"
                            android:textColor="@color/black"
                            android:text="Area"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:paddingTop="@dimen/s4b_padding"
                            android:paddingBottom="@dimen/s4b_padding"
                            android:gravity="left"
                            android:layout_marginRight="@dimen/crammargin25"
                            android:fontFamily="@font/opensans_light"
                            android:id="@+id/property_area_txt"
                            android:layout_marginLeft="@dimen/loginInnerMargin"
                            android:textSize="@dimen/app_small_text"
                            android:textColor="@color/black"
                            android:text="Area"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                
                </LinearLayout>
                
                <LinearLayout
                        android:layout_marginLeft="@dimen/homefragmentmargin"
                        android:layout_marginRight="@dimen/homefragmentmargin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:paddingTop="@dimen/s4b_padding"
                            android:paddingBottom="@dimen/s4b_padding"
                            android:drawablePadding="@dimen/s4b_padding"
                            android:drawableLeft="@drawable/presented_company_img_n"
                            android:fontFamily="@font/opensans_light"
                            android:layout_marginLeft="@dimen/crammargin25"
                            android:textSize="@dimen/app_small_text"
                            android:textColor="@color/black"
                            android:text="Property Title"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:paddingTop="@dimen/s4b_padding"
                            android:paddingBottom="@dimen/s4b_padding"
                            android:gravity="left"
                            android:layout_marginRight="@dimen/crammargin25"
                            android:fontFamily="@font/opensans_light"
                            android:id="@+id/property_company_txt"
                            android:layout_marginLeft="@dimen/loginInnerMargin"
                            android:textSize="@dimen/app_small_text"
                            android:textColor="@color/black"
                            android:text="Company"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                
                </LinearLayout>
                <LinearLayout
                        android:background="@color/holo_gray_bright"
                        android:layout_marginLeft="@dimen/homefragmentmargin"
                        android:layout_marginRight="@dimen/homefragmentmargin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:paddingTop="@dimen/s4b_padding"
                            android:paddingBottom="@dimen/s4b_padding"
                            android:drawablePadding="@dimen/s4b_padding"
                            android:drawableLeft="@drawable/presented_name_img_n"
                            android:fontFamily="@font/opensans_light"
                            android:layout_marginLeft="@dimen/crammargin25"
                            android:textSize="@dimen/app_small_text"
                            android:textColor="@color/black"
                            android:text="Presented Name"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:paddingTop="@dimen/s4b_padding"
                            android:paddingBottom="@dimen/s4b_padding"
                            android:gravity="left"
                            android:fontFamily="@font/opensans_light"
                            android:id="@+id/property_presented_txt"
                            android:layout_marginLeft="@dimen/loginInnerMargin"
                            android:layout_marginRight="@dimen/crammargin25"
                            android:textSize="@dimen/app_small_text"
                            android:textColor="@color/black"
                            android:text="Company"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                
                </LinearLayout>
            </LinearLayout>
            <TextView
                    android:fontFamily="@font/opensans_bold"
                    android:layout_marginTop="@dimen/scmarginleft"
                    android:layout_marginBottom="@dimen/bidcardmargintop"
                    android:layout_marginLeft="@dimen/homefragmentmargin"
                    android:layout_marginRight="@dimen/homefragmentmargin"
                    android:textSize="@dimen/app_heading_text"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Similar Properties"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">
                <androidx.recyclerview.widget.RecyclerView
                        
                        android:layout_marginLeft="@dimen/homefragmentmargin"
                        android:layout_marginRight="@dimen/homefragmentmargin"
                        android:id="@+id/recyc_similar_prop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>