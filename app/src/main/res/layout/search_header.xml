<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginTop="100dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">
    <TextView
            android:id="@+id/clear_filer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/button_elevation"
            android:layout_marginRight="@dimen/button_elevation"
            android:background="@drawable/bid_buy_btns_home"
            android:fontFamily="@font/opensans_bold"
            android:textColor="@drawable/bidbuybtntextstate"
            android:padding="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:elevation="@dimen/button_elevation"
            android:text="Clear Filters"
            android:textAllCaps="false"
            android:textSize="@dimen/app_button_text"
            android:textStyle="bold"/>
        <TextView
                android:id="@+id/search_filter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/button_elevation"
                android:layout_marginRight="@dimen/button_elevation"
                android:background="@drawable/bid_buy_btns_home"
                android:fontFamily="@font/opensans_bold"
                android:textColor="@drawable/bidbuybtntextstate"
                android:padding="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:elevation="@dimen/button_elevation"
                android:text="Search"
                android:textAllCaps="false"
                android:textSize="@dimen/app_button_text"
                android:textStyle="bold"/>
    </LinearLayout>
    
    <EditText
            android:id="@+id/fs_search_edit"
            android:hint="Search by address city or zipcode"
            android:textSize="@dimen/app_small_text"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    
    
    
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fs_suggestions_recycler"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:nestedScrollingEnabled="false"
            android:layout_height="wrap_content" />
    <Spinner
            android:id="@+id/s_property_type"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"/>
    <Spinner
            android:id="@+id/s_space_type"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"/>
    <Spinner
            android:id="@+id/s_min_price"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"/>
    <Spinner
            android:id="@+id/s_max_price"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"/>
    <Spinner
            android:id="@+id/s_min_space"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"/>
    <Spinner
            android:id="@+id/s_max_space"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"/>
</LinearLayout>
