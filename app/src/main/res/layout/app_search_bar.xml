<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_greey"
        tools:context=".activities.MainActivity">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:theme="@style/AppTheme.AppBarOverlay"
                app:elevation="0dp">


            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/toolbar_size"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/app_elevation"
                    android:background="@drawable/search_background"
                    android:gravity="center_vertical"
                    app:contentInsetLeft="0dp"
                    app:contentInsetStart="0dp"
                    app:contentInsetStartWithNavigation="0dp"
                    app:layout_scrollFlags="scroll|enterAlways"
                    app:popupTheme="@style/AppTheme.PopupOverlay"
                    app:theme="@style/ThemeOverlay.AppCompat.Light"
                    app:titleTextColor="@color/white">

                <LinearLayout
                        android:id="@+id/secondry_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                    <ImageView
                            android:id="@+id/app_logo"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_gravity="start|center_vertical"
                            android:layout_marginRight="8dp"
                            android:gravity="center_vertical"
                            android:src="@drawable/toolbarlogo"
                            android:visibility="visible" />

                    <TextView
                            android:id="@+id/fragmentName"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:text="Fragment Name"
                            android:textColor="@color/white"
                            android:textSize="@dimen/app_button_text"
                            android:textStyle="bold"
                            android:visibility="visible" />


                    <ImageView
                            android:id="@+id/add_cart_other"
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="8dp"
                            android:gravity="center_vertical"
                            android:src="@mipmap/add_cart"
                            android:tint="@color/white"
                            android:visibility="gone" />

                    <TextView
                            android:id="@+id/global_invite"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="8dp"
                            android:fontFamily="sans-serif-light"
                            android:gravity="end|center_vertical"
                            android:text="Invite"
                            android:textColor="@color/white"
                            android:textSize="@dimen/app_small_text"
                            android:textStyle="bold"
                            android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/toolbar_li"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:visibility="visible">

                    <ImageView
                            android:id="@+id/search_back"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:gravity="center_vertical"
                            android:src="@drawable/ic_back" />

                    <ImageView
                            android:id="@+id/tologo"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:src="@drawable/tologo" />

                    <EditText
                            android:id="@+id/mainsearch_edittext"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:focusableInTouchMode="true"
                            android:focusedByDefault="false"
                            android:focusable="true"
                            android:fontFamily="sans-serif-light"
                            android:gravity="center_horizontal|center_vertical"
                            android:hint="Search OgreSpace"
                            android:imeOptions="actionSearch"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:textColorHint="@color/gray"
                            android:textSize="@dimen/app_small_text"
                            android:textStyle="bold" />

                    <ImageView
                            android:id="@+id/notifybell"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="0dp"
                            android:visibility="gone"
                            android:gravity="center_vertical"
                            android:src="@drawable/notificationbell"
                            android:tint="@color/md_grey_500"
                            android:tooltipText="2" />

                    <TextView
                            android:id="@+id/tv_notifications_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/notifybell"
                            android:layout_marginLeft="-12dp"
                            android:layout_marginTop="1dp"

                            android:layout_toRightOf="@id/notifybell"
                            android:background="@drawable/shape_round_notification_red"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:paddingLeft="1dp"
                            android:paddingRight="1dp"
                            android:text="10"
                            android:textColor="@color/white"
                            android:textSize="@dimen/notification_size"
                            android:visibility="gone" />



                    <ImageView
                            android:id="@+id/edit_mic"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/app_elevation"
                            android:gravity="center_vertical"
                            android:src="@drawable/mic"
                            android:tint="@color/md_grey_500" />

                    <ImageView
                            android:id="@+id/edit_cross"
                            android:layout_width="@dimen/_13sdp"
                            android:layout_height="@dimen/_13sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="8dp"
                            android:gravity="center_vertical"
                            android:src="@drawable/close_64_10_red"
                            android:tint="@color/md_grey_500"
                            android:visibility="gone" />

                    <ImageView
                            android:id="@+id/add_cart_home"
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/app_elevation"
                            android:gravity="center_vertical"
                            android:src="@mipmap/add_cart"
                            android:tint="@color/md_grey_500"
                            android:visibility="gone" />

                    <TextView
                            android:id="@+id/tv_topbar_invite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|end"
                            android:layout_marginRight="8dp"
                            android:fontFamily="sans-serif-light"
                            android:gravity="end|center_vertical"
                            android:text="Invite"
                            android:textSize="@dimen/app_small_text"
                            android:textStyle="bold"
                            android:visibility="visible"

                    />
                </LinearLayout>


            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>


        <FrameLayout
                android:id="@+id/content_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />


    </LinearLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>