<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".activities.ChangePasswordActivity">
    
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp">
        <!--Password-->
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_layout_old_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:passwordToggleEnabled="true">
            
            <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etcp_old_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Current Password"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
        </com.google.android.material.textfield.TextInputLayout>
        
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_layout_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:passwordToggleEnabled="true">
            
            <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etcp_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="New Password"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
        </com.google.android.material.textfield.TextInputLayout>
        
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_layout_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:passwordToggleEnabled="true">
            
            <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etcp_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirm New Password"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
        </com.google.android.material.textfield.TextInputLayout>
        
        <!--End Password-->
        <TextView
                android:id="@+id/bcp_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bid_buy_btns_home"
                android:fontFamily="@font/opensans_bold"
                android:textColor="@drawable/bidbuybtntextstate"
                android:gravity="center"
                android:padding="8dp"
                android:elevation="@dimen/button_elevation"
                android:text="Submit"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textSize="@dimen/app_button_text"/>
    
    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
