<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/cat_main_layout"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical"
              android:padding="@dimen/app_spacing_smallest"

>
    
    <!--  ListRow Left sied Thumbnail image -->
    
    
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        
        <ImageView
                android:id="@+id/state_image"
                android:layout_width="@dimen/width_iv_home"
                android:layout_height="@dimen/width_iv_home"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/app_spacing_small"
                android:layout_marginRight="@dimen/app_spacing_small"
                
                android:src="@drawable/locationplaceholder" />
        
        <TextView
                
                
                android:id="@+id/state_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                
                android:ellipsize="end"
                
                android:gravity="center"
                android:paddingLeft="@dimen/app_spacing_small"
                android:paddingRight="@dimen/app_spacing_small"
                android:text="State Name"
                
                android:textAlignment="center"
                android:textSize="@dimen/app_small_text"
                android:textStyle="bold" />
    
    </LinearLayout>
</LinearLayout>